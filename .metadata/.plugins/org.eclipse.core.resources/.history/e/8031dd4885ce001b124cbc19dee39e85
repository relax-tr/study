$( document ).ready(function() {
	
	$.ajax({
        type: "POST",
        contentType: "application/json",
        url: "/jquerydeneme",
        data: JSON.stringify(kullaniciForm),
        dataType: 'json',
        cache: false,
        timeout: 600000,
        success: function () {
alert("oldu");
            var json = "Ajax Cevap"
                + JSON.stringify(data, null, 4);
            $('#feedback').html(json);

        },
        error: function (e) {
        	alert("olmadi");
            var json = "Ajax Hata"
                + e.responseText;
            $('#feedback').html(json);


        }
    });
	
	
	$( "#cars" ).change(function() {
		
	        var firstDropVal =this.value;

		  if(firstDropVal=="saab"){
			  
			  $("#div1").hide();
			  
			  $("#div2").show();
			  
			  
		  }
		  if(firstDropVal=="audi"){
			  
			 $("#div1").hide();
			  
			  $("#div2").show();
			  
			
		  }
		  if(firstDropVal=="mercedes"){
			  
			 $("#div2").hide();
			  
			  $("#div1").show();
			  
			
		  }
		  if(firstDropVal=="volvo"){
			  
			 $("#div2").hide();
			  
			  $("#div1").show();
			  
			
		  }
		  
		});
	
	
	
});

</script>
